mixin media(field_type)

	div(class=field_type)
		if field_type == 'thumbnail'
			img(
				ng-if='asset.thumbnailUrl'
				ng-src='asset.thumbnailUrl'
				alt='{{asset.title}}'
			)
		else if field_type == 'med-image'
			img(
				ng-src='asset.mediumUrl' alt='{{asset.title}}'
			)
		else if field_type == 'lg-image'
			img(
				ng-src='asset.largeUrl' alt='{{asset.title}}'
			)
		else if field_type == 'video'
			+controls('video')
			video(
				autoplay='false'
				poster='asset.poster'
			)
				src
		else if field_type == 'audio'
			+controls('audio')
			audio(
				autoplay='false'
			)
				src


